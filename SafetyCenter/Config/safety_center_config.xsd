<!-- This file contains comments that define constraints that cannot be covered by the XSD language -->
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            version="1.0">

    <xsd:element name="safety-center-config" type="safety-center-config">
        <xsd:annotation name="nonnull"/>
    </xsd:element>

    <xsd:complexType name="safety-center-config">
        <xsd:sequence>
            <xsd:element name="safety-sources-config" type="safety-sources-config">
                <xsd:annotation name="nonnull"/>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="safety-sources-config">
        <!-- at least 1 safety sources group or static safety sources group must be present -->
        <xsd:sequence>
            <xsd:element
                name="safety-sources-group"
                type="safety-sources-group"
                minOccurs="0"
                maxOccurs="unbounded">
                <xsd:annotation name="nonnull"/>
            </xsd:element>
            <xsd:element
                name="static-safety-sources-group"
                type="static-safety-sources-group"
                minOccurs="0"
                maxOccurs="unbounded">
                <xsd:annotation name="nonnull"/>
            </xsd:element>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="safety-sources-group">
        <xsd:sequence>
            <xsd:element name="safety-source" type="safety-source"
                         minOccurs="1" maxOccurs="unbounded">
                <xsd:annotation name="nonnull"/>
            </xsd:element>
        </xsd:sequence>
        <!-- id must be unique among safety sources groups and static safety sources groups -->
        <xsd:attribute name="id" type="xsd:string" use="required">
            <xsd:annotation name="nonnull"/>
        </xsd:attribute>
        <xsd:attribute name="title" type="reference" use="required">
            <xsd:annotation name="nonnull"/>
        </xsd:attribute>
        <xsd:attribute name="summary" type="reference" use="required">
            <xsd:annotation name="nonnull"/>
        </xsd:attribute>
    </xsd:complexType>

    <xsd:complexType name="static-safety-sources-group">
        <xsd:sequence>
            <!-- only safety sources of type static are allowed in this sequence -->
            <xsd:element name="static-safety-source" type="safety-source"
                         minOccurs="1" maxOccurs="unbounded"/>
        </xsd:sequence>
        <!-- id must be unique among safety sources groups and static safety sources groups -->
        <xsd:attribute name="id" type="xsd:string" use="required">
            <xsd:annotation name="nonnull"/>
        </xsd:attribute>
        <xsd:attribute name="title" type="reference" use="required">
            <xsd:annotation name="nonnull"/>
        </xsd:attribute>
    </xsd:complexType>

    <xsd:complexType name="safety-source">
        <xsd:attribute name="type" type="sourceType" use="required"/>
        <!-- id must be unique among safety sources -->
        <xsd:attribute name="id" type="xsd:string" use="required">
            <xsd:annotation name="nonnull"/>
        </xsd:attribute>
        <!-- packageName is required for a dynamic safety source -->
        <!-- packageName is prohibited for a static safety source -->
        <!-- packageName is prohibited for an internal safety source -->
        <xsd:attribute name="packageName" type="xsd:string">
            <xsd:annotation name="nullable"/>
        </xsd:attribute>
        <!-- title is required for a dynamic safety source and it represents the fallback value used when no dynamic value is provided -->
        <!-- title is required for a static safety source -->
        <!-- title is prohibited for an internal safety source -->
        <xsd:attribute name="title" type="reference" use="required">
            <xsd:annotation name="nullable"/>
        </xsd:attribute>
        <!-- summary is required for a dynamic safety source and it represents the fallback value used when no dynamic value is provided -->
        <!-- summary is required for a static safety source -->
        <!-- summary is prohibited for an internal safety source -->
        <xsd:attribute name="summary" type="reference" use="required">
            <xsd:annotation name="nullable"/>
        </xsd:attribute>
        <!-- intentAction is required for a dynamic safety source and it represents the fallback value used when no dynamic value is provided -->
        <!-- intentAction is required for a static safety source -->
        <!-- intentAction is prohibited for an internal safety source -->
        <xsd:attribute name="intentAction" type="xsd:string" use="required">
            <xsd:annotation name="nullable"/>
        </xsd:attribute>
        <!-- profile is required for a dynamic safety source -->
        <!-- profile is required for a static safety source -->
        <!-- profile is prohibited for an internal safety source -->
        <xsd:attribute name="profile" type="profile" use="required"/>
        <!-- searchTerms is prohibited for an internal safety source -->
        <xsd:attribute name="searchTerms" type="reference">
            <xsd:annotation name="nullable"/>
        </xsd:attribute>
        <!-- broadcastReceiverClassName is prohibited for a static safety source -->
        <!-- broadcastReceiverClassName is prohibited for an internal safety source -->
        <xsd:attribute name="broadcastReceiverClassName" type="xsd:string">
            <xsd:annotation name="nullable"/>
        </xsd:attribute>
        <!-- disallowLogging defaults to false -->
        <xsd:attribute name="disallowLogging" type="xsd:boolean"/>
    </xsd:complexType>

    <!--
      ~ Possible safety source types are:
      ~ 1: static safety source
      ~ 2: dynamic safety source
      ~ 3: internal safety source
      -->
    <xsd:simpleType name="sourceType">
        <xsd:restriction base="xsd:int">
            <xsd:minInclusive value="1"/>
            <xsd:maxInclusive value="3"/>
        </xsd:restriction>
    </xsd:simpleType>

    <!--
      ~ Possible profile values are:
      ~ 1: primary_profile_only
      ~ 2: all_profiles
      -->
    <xsd:simpleType name="profile">
        <xsd:restriction base="xsd:int">
            <xsd:minInclusive value="1"/>
            <xsd:maxInclusive value="2"/>
        </xsd:restriction>
    </xsd:simpleType>

    <!-- NOTE: string references will be ignored for any attribute not explicitly marked as reference in this schema -->
    <xsd:simpleType name="reference">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="@string/.+"/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>
